@using Skoleni.ViewModels
@model List<CategoryViewModel>

<div class="row">
    <a href="@Url.Action("Create", "Categories")">Vytvořit</a>
    <table>
        <tr>
            <td width="300"><strong>Titulek</strong></td>
            <td colspan="2"></td>
        </tr>
        @foreach (CategoryViewModel category in Model)
        {
            <tr>
                <td>@category.Title</td>
                <td><a href="@Url.Action("Edit", "Categories", new {id = category.Id})">Editovat</a></td>
                <td><a href="@Url.Action("Delete", "Categories", new {id = category.Id})">Odstranit</a></td>
            </tr>
        }
    </table>
</div>